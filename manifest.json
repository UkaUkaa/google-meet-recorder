{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "version": "1.0.1",
  "description": "Record Google Meet with overlay and preview modal.",
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon-no-record.png"
    }
  },
  "icons": {
    "128": "icons/icon-no-record.png"
  }
}
